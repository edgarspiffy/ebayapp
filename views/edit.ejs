<% include partials/header%>

<h3 style='text-align: center;'>Current Selling Price = <%=product.sellingPrice.toFixed(2)%></h3>
<h3 style='text-align: center;'>Net Profit= <%=product.net.toFixed(2)%> </h3>
<div style='width:30%; margin:25px auto;'>
   
    <form action='/edit/<%=product._id%>?_method=PUT' method='POST'>
        <div class='form-group'>
        <p style='margin:-1px'>New Selling Price</p>
        <input class='form-control' type='number' name='sellingPrice' placeholder='' step=".01">
        </div>
        <div class='form-group'>
        <button class='btn btn-md btn-primary btn-block'>Update</button>
        </div>
    </form>
  
</div>


<% include partials/footer%>